{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "packages/epoch-dashboard/src/*"
      ],
      "@components/*": [
        "packages/epoch-dashboard/src/components/*"
      ],
      "@hooks/*": [
        "packages/epoch-dashboard/src/hooks/*"
      ],
      "@utils/*": [
        "packages/epoch-dashboard/src/utils/*"
      ],
      "@types/*": [
        "packages/epoch-dashboard/src/types/*"
      ],
      "@config/*": [
        "packages/epoch-dashboard/src/config/*"
      ],
      "@services/*": [
        "packages/epoch-dashboard/src/services/*"
      ],
      "@context/*": [
        "packages/epoch-dashboard/src/context/*"
      ]
    },
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "incremental": true
  },
  "include": [
    "packages/epoch-dashboard/src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
