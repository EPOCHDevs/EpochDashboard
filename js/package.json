{
  "name": "@epochlab/epoch-dashboard-workspace",
  "version": "1.0.0",
  "description": "Monorepo for Epoch Dashboard package and examples",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/playground",
    "dev:playground": "npm run dev --workspace=apps/playground",
    "build": "npm run build:package && npm run build:playground",
    "build:package": "npm run build --workspace=packages/epoch-dashboard",
    "build:playground": "npm run build --workspace=apps/playground",
    "type-check": "npm run type-check --workspace=packages/epoch-dashboard && npm run type-check --workspace=apps/playground",
    "lint": "npm run lint --workspace=packages/epoch-dashboard && npm run lint --workspace=apps/playground",
    "clean": "npm run clean --workspace=packages/epoch-dashboard",
    "publish:package": "npm publish --workspace=packages/epoch-dashboard"
  },
  "keywords": [
    "tearsheet",
    "dashboard",
    "charts",
    "protobuf",
    "react",
    "typescript",
    "tailwind",
    "visualization",
    "epochlab",
    "monorepo"
  ],
  "author": "EpochLab",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/EPOCHDevs/EpochDashboard.git"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@types/ms": "^2.1.0",
    "@types/node": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "autoprefixer": "^10.4.21",
    "eslint": "latest",
    "eslint-config-prettier": "latest",
    "eslint-plugin-react": "latest",
    "eslint-plugin-react-hooks": "latest",
    "postcss": "^8.5.6",
    "prettier": "latest",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "latest",
    "vitest": "latest"
  }
}
